<h1>Alunos</h1>

<table>
    <thead>
        <tr>
            <th>Name:</th>
            <th>E-mail:</th>
            <th>Matrícula:</th>
            <th>Ocupação:</th>
            <th colspan="4"></th>
        </tr>
    </thead>

    <tbody>
       <% @alunos.each do |aluno| %>
        <tr>
          <td><%= aluno.aluno_name %></td>
          <td><%= aluno.email %></td>
          <td><%= aluno.matricula %></td>
          <td><%= aluno.cargo.funcao %></td>
          <td><%= link_to 'Visualizar', aluno %></td>
          <td><%= link_to 'Editar', edit_aluno_path(aluno) %></td>
          <td><%= button_to 'Excluir', aluno, method: :delete, data: { confirm: 'Tem certeza'} %></td>
        </tr>
        <% end %>
    </tbody>
</table>

<br>

