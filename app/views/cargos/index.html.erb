<h1>Cargos</h1>

<table>
 <thead>
     <tr>
        <th>Função: </th>
        <th>Sigla: </th>
        <th colspan="3"></th>
     </tr>
 </thead>

  <tbody>
    <% @cargos.each do |cargo| %>
      <tr>
        <td><%= cargo.funcao %></td>
        <td><%= cargo.sigla %></td>
        <td><%= link_to 'Visualizar', cargo %></td>
        <td><%= button_to 'Excluir', cargo, method: :delete, data: { confirm: 'Tem certeza'} %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Cargo', new_cargo_path %>
<%= link_to 'Voltar para Usuários', alunos_path %>
    
