<h1>Profiles</h1>

<table>
    <thead>
        <tr>
            <th>Name:</th>
            <th>E-mail:</th>
            <th>Matrícula:</th>
            <th>Ocupação:</th>
            <th colspan="4"></th>
        </tr>
    </thead>

    <tbody>
       <% @profiles.each do |profile| %>
        <tr>
          <td><%= profile.name %></td>
          <td><%= profile.email %></td>
          <td><%= profile.matricula %></td>
          <td><%#= profile.cargo.funcao %></td>
          <td><%#= link_to 'Visualizar', profiles_index_path %></td>
          <td><%#= link_to 'Editar', edit_profile_path(profile) %></td>
          <td><%#= button_to 'Excluir', profile, method: :delete, data: { confirm: 'Tem certeza'} %></td>
        </tr>
        <% end %>
    </tbody>
</table>

<br>

